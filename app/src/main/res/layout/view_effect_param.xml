<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="40dp"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ToggleButton
        android:id="@+id/btnLFO"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_margin="2dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="SND"
        android:textOff="SND"
        android:textOn="SND"
        android:textSize="6dp"
        android:background="@drawable/drw_mod_button_normal"/>

    <TextView
        android:id="@+id/tvFxParamValue"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:text="0.0"
        android:textSize="8dp"
        />

    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1">

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
            android:id="@+id/sbFxParamValue"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:max="100"
            android:maxHeight="4dp"
            android:maxWidth="4dp"
            android:progress="0"
            android:progressDrawable="@drawable/draw_progress"
            android:thumb="@drawable/draw_slider"
            app:seekBarRotation="CW270"
            />

    </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

    <TextView
        android:id="@+id/tvFxParamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"

        android:text="Mix"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="8dp"/>
</LinearLayout>